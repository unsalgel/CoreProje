@model CoreProje.Areas.Writer.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

         <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Profil Bilgilerini Düzenle</h4>
                  
                  <form class="forms-sample" method="post"  enctype="multipart/form-data">
                    <div class="form-group">
                      <label for="exampleInputName1">Adınız</label>
                      <input type="text" class="form-control"  asp-for="Name" value="@Model.Name" id="exampleInputName1" placeholder="Adınız">
                    </div>
                      <div class="form-group">
                      <label for="exampleInputName1">Soyadınız</label>
                      <input type="text" class="form-control"  asp-for="SurName" id="exampleInputName1" placeholder="Soyadınız">
                    </div>
                  
                    <div class="form-group">
                      <label for="exampleInputPassword4">Şifre</label>
                      <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword4" placeholder="Şifreniz">
                    </div>
                      <div class="form-group">
                      <label for="exampleInputPassword4">Şifre Tekrar</label>
                      <input type="password" class="form-control" asp-for="PasswordConfirm" id="exampleInputPassword4" placeholder="Şifre Tekrar">
                    </div>
                     <div class="form-group">
                      <label>Resim Seç</label>
                      <input type="file" asp-for="Picture" >
                   
                    </div>       
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">Vazgeç</button>
                  </form>
                </div>
              </div>
            </div>