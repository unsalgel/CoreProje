@using EntityLayer.Concrete
@model List<Portfolio>
@{
    string durum = "";
    string renk = "";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Projelerim</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> Resim</th>
                                <th> Proje Adı</th>
                                <th> Başlık </th>
                                <th> Durum </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (@item.Status == false)
                                {
                                    durum = "Proje sona erdi";
                                    renk = "badge badge-outline-danger";
                                }
                                else
                                {
                                    durum = "Proje devam ediyor";
                                    renk = "badge badge-outline-success";
                                }
                                <tr>
                                    <td>@item.PortfolioID</td>
                                    <td><img src="@item.SmallImageURL"></td>
                                    <td>@item.Name</td>
                                    <td>@item.Title</td>
                                    <td><div class="@renk">@durum</div></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>