@using EntityLayer.Concrete
@model List<Message>

<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">İLetişim Panelinden Gelen Mesajlar</h4>
                <p class="text-muted mb-1 small"></p>
            </div>
            @foreach (var item in Model)
            {
                <div class="preview-list">
                    <div class="preview-item border-bottom">
                        <div class="preview-thumbnail">
                            <img src="/Template/images/zil.png" alt="image" class="rounded-circle" />
                        </div>
                        <div class="preview-item-content d-flex flex-grow">
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject">@item.Name</h6>
                                    <p class="text-muted text-small">@Convert.ToDateTime(@item.Date).ToString("dd-MMMM-yyyy")</p>
                                </div>
                                <p class="text-muted">@item.Content.Substring(0,20)...</p>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>

