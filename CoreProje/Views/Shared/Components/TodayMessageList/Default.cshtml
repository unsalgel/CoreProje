@using EntityLayer.Concrete
@model List<WriterImage>

<li class="nav-item dropdown border-left">
    <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
        <i class="mdi mdi-email"></i>
        <span class="count bg-success"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
        <h6 class="p-3 mb-0">Bugün Gelen Mesajlar</h6>
        <div class="dropdown-divider"></div>
        @foreach (var item in Model)
       {
        <a class="dropdown-item preview-item" href="/AdminMessage/AdminMessageDetails/@item.ID">
            <div class="preview-thumbnail">
                    <img src="@item.ImageUrl" alt="image" class="rounded-circle profile-pic">
            </div>
          
            <div class="preview-item-content">
                <p class="preview-subject ellipsis mb-1">@item.SenderName tarafından bir mesajınız var</p>
                <p class="text-muted mb-0">@Convert.ToDateTime(item.Date).ToString("dd-MMMM-yyyy") </p>
            </div>
        </a>
        }
    </div>
</li>