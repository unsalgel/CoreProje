@using EntityLayer.Concrete
@model List<Experience>

@foreach (var item in Model)
{    
<div class="card mb-3" data-aos="fade-right" data-aos-delay="100">
    <div class="card-header px-3 py-2">

        <div class="d-flex justify-content-between">
            <div>
                <h3 class="h5 mb-1">@item.Name</h3>
                <div class="text-muted text-small">Tarih : <small>@Convert.ToDateTime(@item.Date).ToString("dd-MMMM-yyyy")</small></div>
            </div><img src="~/Template/images/services/ui-ux.svg" width="48" height="48" alt="ui-ux" />
        </div>
    </div>
    <div class="card-body px-3 py-2">
        @item.Description
    </div>
</div>
}
