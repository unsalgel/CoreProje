@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
    <table class="table table-striped ">
        <tr>
            <th scope="col" class="sort">#</th>
            <th scope="col" class="sort">Başlık</th>
            <th scope="col" class="sort">Resim</th>
            <th scope="col" class="sort">Sil</th>
            <th scope="col" class="sort">Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr >
                <th>@item.ServicesID</th>
                <td>@item.Title</td>
                <td><img src="@item.ImageURL"></td> 
                <td><a href="/Service/DeleteService/@item.ServicesID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Service/EditService/@item.ServicesID" class="btn btn-warning">Düzenle</a></td>
            </tr>
        }
    </table>
    <br />
    <br />
    <button  data-toggle="modal" data-target="#modal1" class="btn btn-primary">Yeni Hizmet Ekle</button>
    <br />
</div>

<div class="modal" id="modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Yeni Hizmet Ekleme Paneli</h2>
            </div>
            <form method="post" action="/Service/AddService">
                <div class="modal-body">
                    <label>Hizmet Adı</label>
                    <input type="text" required name="Title" class="form-control" />
                    <label>Hizmet Resim</label>
                    <input type="text" required  name="ImageURL" class="form-control" />                   
                    <br />
                    <button class="btn btn-primary">Hizmet Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>


    </div>
</div>
