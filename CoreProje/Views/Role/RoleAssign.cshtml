@model List<CoreProje.Models.RoleAssignViewModel>
@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Atama</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="RoleAssign" asp-controller="Role">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Yetki
                        </th>
                        <th>
                            Role Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td><input type="checkbox" asp-for="@Model[i].HasAssign" /> </td>
                            <td>
                                @Model[i].RoleName
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="2">
                            <button class="btn btn-outline-primary">Rol Ata</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>







